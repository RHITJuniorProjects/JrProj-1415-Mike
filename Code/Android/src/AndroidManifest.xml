<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rhit.jrProj.henry"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="20" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
       <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MilestoneListActivity"
            android:label="@string/title_milestone_list"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="rhit.jrProj.henry.MainActivity" />
        </activity>
        <activity
            android:name=".MilestoneDetailActivity"
            android:label="@string/title_milestone_detail"
            android:parentActivityName=".MilestoneListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="rhit.jrProj.henry.MilestoneListActivity" />
        </activity>
        <activity
            android:name=".MainTaskActivity"
            android:label="@string/app_name" >
            <!--  <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter> -->
        </activity>
        <activity
            android:name=".TaskListActivity"
            android:parentActivityName=".MainTaskActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.firebasetest.MainActivity" />
        </activity>
        <activity
            android:name=".TaskDetailActivity"
            android:parentActivityName=".ItemListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.firebasetest.ItemListActivity" />
        </activity>
        <activity
            android:name=".ProjectActivity"
            android:label="PROJECT" >
        </activity>
        <activity
            android:name=".ProjectListActivity"
            android:label="@string/title_project_list"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="rhit.jrProj.henry.MainActivity" />
        </activity>
        <activity
            android:name=".ProjectDetailActivity"
            android:label="@string/title_project_detail"
            android:parentActivityName=".ProjectListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="rhit.jrProj.henry.ProjectListActivity" />
        </activity>
        <fragment 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_project_list"/>
        <fragment 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_milestone_list"/>
        <fragment 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_task_list"/>
        <fragment 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_project_detail"/>
        <fragment 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_milestone_detail"/>
        <fragment 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_task_detail"/>
        <fragment 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_milestone_detail"/>
        <fragment 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_task_detail"/>
        <fragment 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_project_detail"/>
        <fragment 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_project_twopane"/>
        <fragment 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_milestone_twopane"/>
        <fragment 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_task_twopane"/>
        
        
        
        
    </application>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

</manifest>
