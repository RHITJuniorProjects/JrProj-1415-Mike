<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="80dp"
            android:gravity="center"
            android:orientation="horizontal" >
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/go_to_projects_btn"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/ic_projects"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/go_to_projects_btn"
                android:layout_marginLeft="20dp"
                android:text="Projects"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceLarge"
                 />

			</LinearLayout>
			<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/go_to_metrics_btn"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/ic_metrics" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/go_to_metrics_btn"
                android:layout_marginLeft="50dp"
                android:text="Metrics"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceLarge"
                 />

			</LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal" >
			<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/go_to_tasks_btn"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/ic_tasks" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/go_to_tasks_btn"
                android:layout_marginLeft="30dp"
                android:text="Tasks"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceLarge"
                 />

			</LinearLayout>
			<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/go_to_profile_btn"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/ic_profile" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/go_to_profile_btn"
                android:layout_marginLeft="60dp"
                android:text="Profile"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceLarge"
                 />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>